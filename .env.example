# Database
DATABASE_URL=postgres://sandboxie:sandboxie@localhost:5432/sandboxie
DB_PASSWORD=sandboxie

# Auth
# Generate hash with: bun run scripts/hash-password.ts your-password
ADMIN_PASSWORD_HASH=$argon2id$v=19$m=65536,t=2,p=1$...your-hash-here
JWT_SECRET=change-this-to-a-random-string

# Cloudflare (optional â€” leave empty to skip DNS/tunnel)
CF_API_TOKEN=your-cloudflare-api-token
CF_ZONE_ID=your-zone-id
CF_DOMAIN=sandbox.yourdomain.com
CF_TUNNEL_ID=your-tunnel-id

# Server
PORT=3000
HOST=0.0.0.0
# Comma-separated allowed origins for CORS (leave empty to allow all in dev)
ALLOWED_ORIGINS=

# Podman
SANDBOX_IMAGE=localhost/sandboxie:latest
SSH_PORT_START=2200
SSH_PORT_END=2299
